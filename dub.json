    "configurations": [
		{
			"name": "dtk",
			"targetType": "staticLibrary",
			"targetPath": "bin",
		},

        {
            "name": "simple",
            "targetName": "simple",
            "targetType": "executable",
            "sourceFiles": ["examples/simple.d"],
            "sourceFiles-windows": ["implib/comctl32.lib", "implib/ole32.lib"],
            "mainSourceFile": "examples/simple.d",
            "targetPath" : "bin"
        },

        {
            "name": "buttons",
            "targetName": "buttons",
            "targetType": "executable",
            "sourceFiles": ["examples/buttons.d"],
            "sourceFiles-windows": ["implib/comctl32.lib", "implib/ole32.lib"],
            "mainSourceFile": "examples/buttons.d",
            "targetPath" : "bin"
        },

        {
            "name": "menus",
            "targetName": "menus",
            "targetType": "executable",
            "sourceFiles": ["examples/menus.d"],
            "sourceFiles-windows": ["implib/comctl32.lib", "implib/ole32.lib"],
            "mainSourceFile": "examples/menus.d",
            "targetPath" : "bin"
        },

        {
            "name": "images",
            "targetName": "images",
            "targetType": "executable",
            "sourceFiles": ["examples/images.d"],
            "sourceFiles-windows": ["implib/comctl32.lib", "implib/ole32.lib"],
            "mainSourceFile": "examples/images.d",
            "targetPath" : "bin"
        },

	]
}
